package pkg

import (
	"bytes"
	"fmt"
	"io"
)

func _(w io.Writer) {
	fmt.Fprint(w, "abc", "de")   // want `should use fmt.Fprint`
	fmt.Fprintf(w, "%T", w)      // want `should use fmt.Fprintf`
	fmt.Fprintln(w, "abc", "de") // want `should use fmt.Fprintln`
}

func fn() {
	buf := new(bytes.Buffer)
	var sw io.StringWriter

	fmt.Fprint(buf, "abc", "de")   // want `should use fmt.Fprint`
	fmt.Fprintf(buf, "%T", 0)      // want `should use fmt.Fprintf`
	fmt.Fprintln(buf, "abc", "de") // want `should use fmt.Fprintln`

	// We can't suggest fmt.Fprint here. We don't know if sw implements io.Writer.
	sw.WriteString(fmt.Sprint("abc", "de"))
	sw.WriteString(fmt.Sprintf("%T", 0))
	sw.WriteString(fmt.Sprintln("abc", "de"))
}
